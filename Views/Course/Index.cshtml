@model List<CourseViewModel>

<h1>@ViewData["Title"]</h1><br>
@foreach (CourseViewModel course in Model)
{
    <div class="row rows">
        <div class="col-md-1">
            <img src= "@course.ImagePath" width="50px">
        </div>
        <div class="col-md-5">
            <h3>@course.Title</h3>
            <author class="author">@course.Author</author>
        </div>
        <div class="col-md-2 rating" title="@course.Rating">
            @for (int i = 1; i <= 5; i++)
            {
                if (course.Rating >= i)
                {
                    <i class="fa-sharp fa-solid fa-star"></i>
                }
                else if (course.Rating > i - 1)
                {
                    <i class="fa-regular fa-star-half-stroke"></i>
                }
                else
                {
                    <i class="fa-light fa-star-sharp"></i>
                }
            }
        </div>
        <div class="col-md-2">
            @course.CurrentPrice
            @if (!course.FullPrice.Equals(course.CurrentPrice))
            {
                <br /><s class="price">@course.FullPrice</s>
            }
        </div>
        <div class="col-md-2">
            <a class="btn btn-outline-primary" asp-action="Detail" asp-route-id="@course.Id">Dettaglio corso</a>
        </div>
    </div>
}
